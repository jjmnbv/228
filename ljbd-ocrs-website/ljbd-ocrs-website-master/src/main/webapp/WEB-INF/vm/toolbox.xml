<?xml version="1.0"?>
<toolbox>
    <tool>
        <key>import</key>
        <scope>request</scope>
        <class>org.apache.velocity.tools.view.tools.ImportTool</class>
    </tool>

    <tool>
        <key>localHost</key>
        <scope>request</scope>
        <class>com.jd.bk.common.util.network.LocalHost</class>
    </tool>

    <tool>
        <key>assetModule</key>
        <scope>request</scope>
        <class>com.jd.bk.common.web.url.JdUrl</class>
        <parameter name="url" value="http://${afs.asset.domain.name}"/>
        <parameter name="charsetName" value="UTF-8"/>
    </tool>

    <tool>
        <key>homeModule</key>
        <scope>request</scope>
        <class>com.jd.bk.common.web.url.JdUrl</class>
        <parameter name="url" value="http://${afs.domain.name}/"/>
        <parameter name="charsetName" value="UTF-8"/>
    </tool>
     
    <tool>
        <key>stringUtils</key>
        <scope>request</scope>
        <class>org.apache.commons.lang.StringUtils</class>
    </tool>
    <tool>
        <key>stringEscapeUtils</key>
        <scope>request</scope>
        <class>org.apache.commons.lang.StringEscapeUtils</class>
    </tool>
    <tool>
        <key>dateFormatUtils</key>
        <scope>request</scope>
        <class>com.jd.bk.common.util.date.DateFormatUtils</class>
    </tool>
    <tool>
        <key>dateUtils</key>
        <scope>request</scope>
        <class>org.apache.commons.lang.time.DateUtils</class>
    </tool>


    <tool>
        <key>asfStringUtils</key>
        <scope>request</scope>
        <class>com.jd.afs.common.util.AsfStringUtils</class>
    </tool>

</toolbox>